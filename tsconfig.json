{
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext", "ES2021"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "jsxImportSource": "@emotion/react",
    "incremental": true,
    "baseUrl": "./",
    "paths": {
      "@api/*": ["pages/api/*"],
      "@pages/*": ["pages/*"],
      "@script/*": ["script/*"],
      "@public/*": ["public/*"],
      "@styles/*": ["styles/*"],
      "@utils/*": ["components/utils/*"],
      "@components/*": ["components/*"]
    },
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "include": ["**/*.ts", "**/*.tsx", "script/bing-sitemap-submit.script"],
  "exclude": ["node_modules", "script"]
}
